<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="so.wwb.creditbox.data.manager.lottery.SiteLotteryOddsMapper">

    <resultMap id="TABLE:site_lottery_odds" type="so.wwb.creditbox.model.manager.lottery.po.SiteLotteryOdds">
        <id column="id" property="id"/>
        <result column="site_id" property="siteId"/>
        <result column="hid" property="hid"/>
        <result column="code" property="code"/>
        <result column="bet_name" property="betName"/>
        <result column="bet_code" property="betCode"/>
        <result column="play_code" property="playCode"/>
        <result column="bet_num" property="betNum"/>
        <result column="bet_sort" property="betSort"/>
        <result column="odd_a" property="oddA"/>
        <result column="odd_b" property="oddB"/>
        <result column="odd_c" property="oddC"/>
        <result column="min_odd" property="minOdd"/>
        <result column="max_odd" property="maxOdd"/>
        <result column="odd_close" property="oddClose"/>
    </resultMap>

    <!--//region your codes 1-->
    <select id="getBetSortLine" resultMap="TABLE:site_lottery_odds">
        SELECT * FROM  site_lottery_odds WHERE code = #{0} AND site_id = #{1} AND hid = #{2} AND bet_sort = #{3};
    </select>

    <update id="saveSiteLotteryOdds" parameterType="so.wwb.creditbox.model.manager.lottery.vo.SiteLotteryOddsVo">
        UPDATE site_lottery_odds SET odd_a=#{search.oddA},odd_b=#{search.oddB},odd_c=#{search.oddC},max_odd=#{search.maxOdd} WHERE site_id=#{search.siteId} AND  code = #{search.code} bet_sort in
        <foreach item="sort" collection="betSorts" open="(" close=")" separator=",">
            ${sort}
        </foreach>
    </update>
    <!--//endregion your codes 1-->

</mapper>