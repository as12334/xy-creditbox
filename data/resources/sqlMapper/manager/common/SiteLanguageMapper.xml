<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="so.wwb.lotterybox.data.manager.common.SiteLanguageMapper">

    <resultMap id="TABLE:site_language" type="so.wwb.lotterybox.model.manager.site.po.SiteLanguage">
        <id column="id" property="id"/>
        <result column="site_id" property="siteId"/>
        <result column="language" property="language"/>
        <result column="status" property="status"/>
        <result column="logo" property="logo"/>
        <result column="open_time" property="openTime"/>
    </resultMap>

    <!--//region your codes 1-->
    <select id="queryLanguage" resultType="so.wwb.lotterybox.model.manager.site.po.SiteLanguage" parameterType="so.wwb.lotterybox.model.manager.sys.vo.SysSiteVo">
        SELECT * FROM site_language WHERE LANGUAGE !=#{result.mainLanguage} AND SITE_ID=#{result.id} ORDER BY CASE status WHEN '1'  THEN 1 WHEN '2' THEN 2 WHEN '0' THEN 3 END,open_time DESC
    </select>

    <select id="masterIsUse" resultType="java.lang.String">
        SELECT DISTINCT(language) FROM site_language  WHERE site_id in (SELECT id FROM sys_site WHERE parent_id=#{SiteId})
    </select>
    <!--//endregion your codes 1-->

</mapper>