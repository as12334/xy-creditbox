<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="login" class="so.wwb.lotterybox.web.shiro.local.filter.HallLoginFilter">
		<property name="loginUrl" value="/**/passport/login.html"/>
		<property name="passportDelegate" ref="passportDelegate"/>
		<property name="baseWebConf" ref="baseWebConf"/>
		<property name="authorizationRefresher" ref="authorizationRefresher"/>
	</bean>

	<bean id="apiLogin" class="so.wwb.lotterybox.web.shiro.local.filter.ApiLoginFilter">
		<property name="apiLoginUrl" value="/**/passport/apiLogin.html"/>
		<property name="passportDelegate" ref="passportDelegate"/>
		<property name="baseWebConf" ref="baseWebConf"/>
		<property name="authorizationRefresher" ref="authorizationRefresher"/>
	</bean>

	<bean id="logout" class="so.wwb.lotterybox.web.shiro.local.filter.LocalLogoutFilter">
		<property name="redirectUrl" value="/"/>
		<property name="passportDelegate" ref="passportDelegate"/>
	</bean>

	<bean id="forbidFilter" class="so.wwb.lotterybox.web.shiro.local.filter.ForbidFilter">
		<property name="redirectUrl" value="/"/>
	</bean>

</beans>
