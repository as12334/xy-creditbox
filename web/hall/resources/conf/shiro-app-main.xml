<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
	   http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	   http://www.springframework.org/schema/util
	   http://www.springframework.org/schema/util/spring-util-4.1.xsd"
	   default-autowire="byName">

	<import resource="classpath*:conf/shiro-base.xml"/>
	<import resource="classpath*:conf/shiro-common.xml"/>
	<import resource="classpath*:conf/shiro-base-local.xml"/>
	<import resource="classpath*:conf/shiro-app-local.xml"/>

	<!-- define listeners -->
	<util:list id="passportListeners">
		<ref bean="passportListener"/>
		<ref bean="userInfoListener"/>
	</util:list>

	<bean id="passportDelegate" class="so.wwb.lotterybox.web.shiro.common.delegate.PassportDelegate">
		<property name="passportListeners" ref="passportListeners"/>
	</bean>

	<!--登录后:获取用户信息-->
	<bean id="userInfoListener" class="so.wwb.lotterybox.hall.session.listener.UserInfoListener"/>

	<!-- Shiro Filter -->
	<bean id="shiroFilter" class="org.soul.web.shiro.common.spring.CustomShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager"/>
		<property name="successUrl" value="/index.html"/>
		<property name="loginUrl" value="/index.html"/>
		<property name="unauthorizedUrl" value="/errors/403.html"/>
		<property name="filters">
			<map>
				<entry key="kickout" value-ref="kickoutFilter"/>
				<entry key="login" value-ref="login"/>
				<entry key="apiLogin" value-ref="apiLogin"/>
				<entry key="logout" value-ref="logout"/>
				<entry key="autho" value-ref="authoFilter"/>
				<entry key="authc" value-ref="authcFilter"/>
				<entry key="captcha" value-ref="captcha"/>
				<entry key="forbid" value-ref="forbidFilter"/>
				<entry key="ip" value-ref="ipFilterPlayer"/>
			</map>
		</property>
		<property name="filterChainDefinitions">
			<value>
				/images/favicon.ico = anon
				/resource/** = anon
				/template/email/** = anon
				/errors/** = anon
				/message_*.js = ip
				/register.html = ip,forbid
				/passport/displayCaptcha.html = ip
				/captcha/*.html = ip,captcha
				/passport/apiLogin* = ip,apiLogin
				/passport/login* = ip,login
				/** = ip
			</value>
		</property>
	</bean>
</beans>
